<script>
    lucide.createIcons();
    
    let idParaEliminar = null;


    function abrirModal(id, nombre) {
        document.getElementById('editId').value = id;
        document.getElementById('editNombre').value = nombre;
        document.getElementById('modalEditar').classList.remove('hidden');
    }
    function cerrarModal() {
        document.getElementById('modalEditar').classList.add('hidden');
    }

    function abrirConfirmacion(id) {
        idParaEliminar = id;
        document.getElementById('modalConfirmar').classList.remove('hidden');
    }
    function cerrarConfirmacion() {
        document.getElementById('modalConfirmar').classList.add('hidden');
    }

    function mostrarExito(mensaje) {
        document.getElementById('textoExito').innerText = mensaje;
        document.getElementById('modalExito').classList.remove('hidden');
    }
    function cerrarExito() {
        document.getElementById('modalExito').classList.add('hidden');
    }


    function ejecutarEliminacion() {
        if(!idParaEliminar) return; 

        const idLocal = idParaEliminar;

        const url = "<?= $this->url->get('hola/eliminar/') ?>" + idLocal;

        fetch(url, {
            method: 'GET',
            headers: { 'Accept': 'application/json' }
        })
        .then(response => response.json())
        .then(data => {
            cerrarConfirmacion(); 
            
            if(data.status === 'success') {
                const fila = document.getElementById('fila-' + idLocal);
                if(fila) {
                    fila.classList.add('fade-out'); 
                    setTimeout(() => fila.remove(), 500); 
                }
                mostrarExito('Â¡Eliminado exitosamente!');
            } else {
                alert('Hubo un error al intentar eliminar.');
            }
            idParaEliminar = null; 
        })
        .catch(err => {
            console.error('Error:', err);
            cerrarConfirmacion();
            alert('Error de conexiÃ³n.');
        });
    }

    function guardarEdicion() {
        const id = document.getElementById('editId').value;
        const nombre = document.getElementById('editNombre').value;
        const url = "<?= $this->url->get('hola/editar') ?>";

        if(!nombre.trim()) { alert('El nombre no puede estar vacÃ­o'); return; }

        fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: id, nombre: nombre })
        })
        .then(response => response.json())
        .then(data => {
            if(data.status === 'success') {
                const celdaNombre = document.getElementById('nombre-celda-' + id);
                if(celdaNombre) celdaNombre.innerText = nombre;
                
                const btnEditar = document.querySelector(`#fila-${id} button[onclick^="abrirModal"]`);
                if(btnEditar) {
                    btnEditar.setAttribute('onclick', `abrirModal(${id}, '${nombre}')`);
                }

                cerrarModal();
                mostrarExito('Â¡ActualizaciÃ³n exitosa!');
            } else {
                alert('âŒ Error: ' + data.msg);
            }
        })
        .catch(err => console.error('Error:', err));
    }
</script>
