<script>
    lucide.createIcons();

    let index = 0;
    const slides = document.querySelectorAll('.diapositiva');
    const totalSlides = slides.length;
    if (totalSlides > 1) {
        setInterval(() => {
            slides[index].classList.remove('activa');
            index = (index + 1) % totalSlides;
            slides[index].classList.add('activa');
        }, 5000);
    }

    function validarNombre(input) {
        input.value = input.value.replace(/[^a-zA-ZñÑáéíóúÁÉÍÓÚ\s]/g, '').replace(/\s{2,}/g, ' ');
        const advertencia = document.getElementById('adv_nombre');
        if(input.value.length >= 35 || input.value.trim() === '') {
            advertencia.style.display = 'block';
            if(input.value.trim() === '') {
                advertencia.innerText = '⚠️ El nombre no puede estar vacío';
            } else {
                advertencia.innerText = '⚠️ Límite de 35 caracteres alcanzado';
            }
        } else {
            advertencia.style.display = 'none';
        }
    }

    function guardarAlumno() {
        const nombre = document.getElementById('nombre_completo').value.trim();
        const advertencia = document.getElementById('adv_nombre');
        const btn = document.getElementById('btnGuardar');
        const btnTexto = document.getElementById('btnTexto');
        const originalBtnContent = btn.innerHTML; 

        if(nombre === '') {
            advertencia.style.display = 'block';
            advertencia.innerText = '⚠️ El nombre no puede estar vacío';
            return;
        }

        if(nombre.length > 35) {
            advertencia.style.display = 'block';
            advertencia.innerText = '⚠️ Límite de 35 caracteres alcanzado';
            return;
        }

        const soloLetras = /^[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+$/.test(nombre);
        if(!soloLetras) {
            advertencia.style.display = 'block';
            advertencia.innerText = '⚠️ Solo se permiten letras y espacios';
            return;
        }

        advertencia.style.display = 'none';

       
        btn.disabled = true;
        btn.innerHTML = '<i data-lucide="loader-2" class="w-5 h-5 animate-spin"></i> Guardando...';
        lucide.createIcons(); 

        fetch("<?= $this->url->get('hola/guardar') ?>", {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: 'nombre_completo=' + encodeURIComponent(nombre)
        })
        .then(res => {
            if(res.ok) {
                document.getElementById('modalExito').classList.remove('hidden');
                document.getElementById('nombre_completo').value = ''; 

                setTimeout(() => {
                    window.location.href = "<?= $this->url->get('hola/lista') ?>";
                }, 2000);

            } else {
                throw new Error('Error en la respuesta del servidor');
            }
        })
        .catch(err => {
            console.error('Error:', err);
            document.getElementById('textoError').innerText = 'Error de conexión con el servidor';
            document.getElementById('modalError').classList.remove('hidden');
            
            btn.disabled = false;
            btn.innerHTML = originalBtnContent;
            lucide.createIcons();
        });
    }

    function irALista() {
        window.location.href = "<?= $this->url->get('hola/lista') ?>";
    }

    function cerrarError() {
        document.getElementById('modalError').classList.add('hidden');
    }
</script>

