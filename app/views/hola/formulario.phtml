    function validarYEnviar() {
        var mensajesVisibles = false;
        var divsMensaje = document.querySelectorAll('div[id^=msg_]');
        divsMensaje.forEach(d => { if(d.style.display === 'flex') mensajesVisibles = true; });

        var inputs = document.querySelectorAll('input[type="text"], input[type="date"]');
        var hayVacios = false;
        inputs.forEach(i => { if(i.value.trim() === '') hayVacios = true; });

        var sexo = document.querySelector('input[name="sexo"]:checked');

        if(mensajesVisibles || hayVacios || !sexo) {
            var alerta = document.getElementById('alertaError');
            alerta.style.display = 'flex';
            setTimeout(() => { alerta.style.display = 'none'; }, 4000);
        } else {
            document.getElementById('modalExito').style.display = 'flex';
        }
    }
